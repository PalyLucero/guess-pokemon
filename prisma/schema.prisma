// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_URL")
  relationMode      = "prisma"
}

model Pokemon {
  id          Int    @id @unique
  name        String @unique
  types       String
  weight      Int
  height      Int
  clues       String @db.LongText
  description String @db.LongText
}
